@model IEnumerable<App.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Search Orders</h2>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Filter By</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <p>
                Find by Order No: @Html.TextBox("SearchString")
                <button type="submit" class="btn btn-primary">Search</button>
            </p>
            <p align="right">
                <button class="btn btn-link">@Html.ActionLink("New Order", "Index", "Orders")</button>
                <button class="btn btn-danger">Email</button>
                <button class="btn btn-warning">@Html.ActionLink("Print", "PrintList", "Search")</button>
            </p>

        }
    </div>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.OrderID })
                    @Html.ActionLink("Details", "Details", new { id=item.OrderID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.OrderID })
                </td>*@
        </tr>
    }

</table>

